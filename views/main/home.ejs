    <script>
      const s3MainOptions = document.querySelector(".sec-3-options");
      const s3Lowwer = document.querySelector(".sec-3-lowwer");
      const s3ImgOptions = [
        "https://www.proofhub.com/wp-content/themes/ph5.1/images/home/note-table-view.png",
        "https://www.proofhub.com/wp-content/themes/ph5.1/images/home/board-view.png",
        "https://www.proofhub.com/wp-content/themes/ph5.1/images/home/time-tracking.png",
        "https://www.proofhub.com/wp-content/themes/ph5.1/images/home/workflow.png",
        "https://www.proofhub.com/wp-content/themes/ph5.1/images/home/project-template.png",
        "https://www.proofhub.com/wp-content/themes/ph5.1/images/home/reports.png",
        "https://www.proofhub.com/wp-content/themes/ph5.1/images/home/files.png",
      ];

      s3MainOptions.addEventListener("click", (event) => {
        // console.log(event.target); 
        if (event.target != event.currentTarget) {
          let active = 0;
          for (let i = 0; i < s3MainOptions.children.length; i++) {
            let curr = s3MainOptions.children[i];
            if (curr == event.target) {
              active = i;
            }
            curr.classList.remove("active-option-s3");
          }

          let currOption = event.target;
          currOption.classList.add("active-option-s3");
          s3Lowwer.children[1].children[0].src = s3ImgOptions[active]; //for img


          for(let i=0;i<s3Lowwer.children[0].children.length;i++){
            s3Lowwer.children[0].children[i].classList.add("unactive");
          }
          s3Lowwer.children[0].children[active].classList.remove("unactive");
          // console.log(s3Lowwer.children[0].children);
        }
      });




